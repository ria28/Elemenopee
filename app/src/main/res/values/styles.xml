<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@android:color/holo_red_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="biTextAppearance" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@android:color/holo_red_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="darkCustomAppearance" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@android:color/holo_red_dark</item>
        <item name="android:textColor">@color/color5</item>
        <item name="android:textColorHint">@color/softRed</item>
        <item name="colorControlNormal">@color/softBlue</item>
        <item name="colorControlActivated">@color/color5</item>
        <item name="colorControlHighlight">@color/color5</item>
    </style>

</resources>
