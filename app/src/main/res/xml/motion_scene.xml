<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/set1_e"
        motion:constraintSetStart="@id/set1_s"
        motion:duration="1000"
        motion:motionInterpolator="easeOut">
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@+id/id_nav_to_login" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/set2_e"
        motion:constraintSetStart="@id/set1_s"
        motion:duration="1000"
        motion:motionInterpolator="easeOut">
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@id/id_nav_to_signup" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/set2_e"
        motion:constraintSetStart="@id/set1_e"
        motion:duration="1000"
        motion:motionInterpolator="easeIn">
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@id/id_nav_to_signup" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@id/set1_e"
        motion:constraintSetStart="@id/set2_e"
        motion:duration="1000"
        motion:motionInterpolator="easeIn">
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@id/id_nav_to_login" />
    </Transition>

    <ConstraintSet android:id="@+id/set1_s">
        <Constraint
            android:id="@+id/id_nav_to_login"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/textView4">
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="#004fff" />
        </Constraint>
        <Constraint
            android:id="@+id/id_nav_to_signup"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/color4"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/id_nav_to_login">
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="#92140C" />
        </Constraint>
        <Constraint
            android:id="@+id/textView3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline" />
        <Constraint
            android:id="@+id/cardView"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline" />
        <Constraint
            android:id="@+id/cardView2"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline" />
        <Constraint
            android:id="@id/google_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/set1_e">
        <Constraint
            android:id="@+id/id_nav_to_login"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toStartOf="@+id/guideline2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline">
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="#004fff" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customPixelDimension="7sp" />
        </Constraint>
        <Constraint
            android:id="@+id/id_nav_to_signup"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guideline2"
            motion:layout_constraintTop_toTopOf="@+id/id_nav_to_login">
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="@android:color/transparent" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customPixelDimension="2sp" />
        </Constraint>
        <Constraint
            android:id="@+id/textView3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline" />
        <Constraint
            android:id="@+id/cardView"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/id_nav_to_login" />
        <Constraint
            android:id="@+id/cardView2"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline" />
        <Constraint
            android:id="@id/google_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/set2_e">
        <Constraint
            android:id="@+id/id_nav_to_login"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toStartOf="@+id/guideline2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline">
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="@android:color/transparent" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customPixelDimension="2sp" />
        </Constraint>
        <Constraint
            android:id="@+id/id_nav_to_signup"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="@+id/guideline2"
            motion:layout_constraintTop_toTopOf="@+id/id_nav_to_login">
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="@color/color4" />
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customPixelDimension="7sp" />
        </Constraint>
        <Constraint
            android:id="@+id/textView3"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/guideline" />
        <Constraint
            android:id="@+id/cardView2"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/id_nav_to_login" />
        <Constraint
            android:id="@id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@id/google_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

</MotionScene>